<Window x:Class="PEBakery.WPF.LogExportWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PEBakery.WPF"
        mc:Ignorable="d"
        FontSize="13"
        Width="500" Height="280"
        FontFamily="Segoe UI"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterOwner"
        Title="Export Logs" 
        d:DataContext="{d:DesignInstance Type=local:LogExportModel}">
    <Window.CommandBindings>
        <CommandBinding Command="local:LogExportCommands.Export"
                        CanExecute="ExportCommand_CanExecute"
                        Executed="ExportCommand_Executed"/>
    </Window.CommandBindings>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="45"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0"
                    Orientation="Vertical"
                    Margin="5, 5, 5, 0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>

                <GroupBox Grid.Column="0"
                          Margin="0, 0, 3, 5"
                          BorderBrush="Gray">
                    <GroupBox.Header>
                        <TextBlock Text="Log Type"
                                   FontWeight="Bold"/>
                    </GroupBox.Header>
                    <StackPanel>
                        <RadioButton Height="20"
                                     VerticalAlignment="Top"
                                     VerticalContentAlignment="Center"
                                     GroupName="LogType"
                                     IsChecked="{Binding ExportSystemLog}"
                                     Content="System Log"/>
                        <RadioButton Height="20"
                                     VerticalAlignment="Top"
                                     VerticalContentAlignment="Center"
                                     GroupName="LogType"
                                     IsEnabled="{Binding BuildLogRadioEnabled}"
                                     IsChecked="{Binding ExportBuildLog}"
                                     Content="Build Log"/>
                    </StackPanel>
                </GroupBox>
                <GroupBox Grid.Column="1"
                          Margin="3, 0, 0, 5"
                          BorderBrush="Gray">
                    <GroupBox.Header>
                        <TextBlock Text="File Format"
                                   FontWeight="Bold"/>
                    </GroupBox.Header>
                    <StackPanel>
                        <RadioButton Height="20"
                                     VerticalAlignment="Top"
                                     VerticalContentAlignment="Center"
                                     GroupName="FileFormat"
                                     IsChecked="{Binding FileFormatText}"
                                     Content="Text (.txt)"/>
                        <RadioButton Height="20"
                                     VerticalAlignment="Top"
                                     VerticalContentAlignment="Center"
                                     GroupName="FileFormat"
                                     IsChecked="{Binding FileFormatHtml}"
                                     Content="HTML (.html)"/>
                    </StackPanel>
                </GroupBox>
            </Grid>
            
            
            <GroupBox BorderBrush="Gray">
                <GroupBox.Header>
                    <TextBlock Text="Build Log Export Options"
                               FontWeight="Bold"/>
                </GroupBox.Header>
                <StackPanel>
                    <TextBlock Height="20"
                               Margin="5, 0, 0, 0"
                               VerticalAlignment="Top"
                               Text="Select Build"/>
                    <ComboBox Height="25"
                              FontSize="11"
                              Margin="3, 0, 3, 10"
                              VerticalAlignment="Top"
                              VerticalContentAlignment="Center"
                              IsEnabled="{Binding BuildLogOptionEnabled}"
                              ItemsSource="{Binding BuildEntries}"
                              SelectedIndex="{Binding SelectedBuildEntryIndex}">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding Item1}"/>
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                    <CheckBox Height="20"
                              VerticalAlignment="Top"
                              VerticalContentAlignment="Center"
                              IsEnabled="{Binding BuildLogOptionEnabled}"
                              IsChecked="{Binding BuildLogIncludeComments}"
                              Content="Include Comments"/>
                    <CheckBox Height="20"
                              VerticalAlignment="Top"
                              VerticalContentAlignment="Center"
                              IsEnabled="{Binding BuildLogOptionEnabled}"
                              IsChecked="{Binding BuildLogIncludeMacros}"
                              Content="Include Macro Commands"/>
                </StackPanel>
            </GroupBox>
        </StackPanel>
        <StackPanel Grid.Row="1"
                    Margin="0, 10, 0, 0"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right">
            <Button HorizontalAlignment="Right"
                    Margin="0, 0, 10, 10"
                    Width="80"
                    IsDefault="True"
                    x:Name="ExportButton"
                    Command="local:LogExportCommands.Export"
                    Content="Export"/>
            <Button HorizontalAlignment="Right"
                    Margin="0, 0, 10, 10"
                    Width="80"
                    IsCancel="True"
                    Content="Cancel"/>
        </StackPanel>
    </Grid>
</Window>
